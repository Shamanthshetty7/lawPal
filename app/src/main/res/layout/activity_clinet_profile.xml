<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Display User's Profile Picture -->
    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/profile1" />

    <!-- Display User's Name -->

    <!-- Display User's Email -->

    <!-- Display User's Gender -->

    <!-- Display User's Date of Birth (DOB) -->

    <TextView
        android:id="@+id/profileNameTextView"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImageView"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="14dp"
        android:text="Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/profileEmailTextView"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="13dp"
        android:text="Email"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/profileGenderTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileEmailTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="12dp"
        android:text="Gender"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/profileDOBTextView"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileGenderTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="18dp"
        android:text="DOB"
        android:textSize="20sp" />

    <!-- Display User's Aadhar Number -->
    <TextView
        android:id="@+id/profileAadharTextView"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileDOBTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="18dp"
        android:text="Adhaar Number"
        android:textSize="20sp" />

    <!-- Display User's Location -->
    <TextView
        android:id="@+id/profileLocationTextView"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileAadharTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="18dp"
        android:text="Location"
        android:textSize="20sp" />

</RelativeLayout>
